@using ViewComponents.CustomList;
@using WebApp.ViewModels.CustomList

@model CustomListViewModel
<div class="list-bg text-@Model.TextAlign @Model.Margin">

    @if (!string.IsNullOrWhiteSpace(Model.Title))
    {
        <h2 style="margin-bottom:30px">@Model.Title</h2>
    }

    @if (Model.Items?.Any() == true)
    {
        <ul>
            @foreach (var item in Model.Items)
            {
                if (!string.IsNullOrWhiteSpace(item.ItemText))
                {
                    <li class="list-item">@item.ItemText</li>
                }
            }
        </ul>
    }

    @if (!string.IsNullOrWhiteSpace(Model.LinkText) &&
        !string.IsNullOrWhiteSpace(Model.Link.ToString()))
    {
        <button href="@Model.Link"
           class="btn btn-primary rounded-pill">
            @Model.LinkText
        </button>
    }

</div>